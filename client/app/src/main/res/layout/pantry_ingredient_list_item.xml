<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/pantryIngTv"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textSize="20sp">

    </TextView>

    <EditText
        android:id="@+id/pantryIngDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Exp. date"
        android:paddingTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/decreaseAmountIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_circle"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:clickable="true"></ImageView>

    <EditText
        android:id="@+id/pantryIngAmountEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_marginLeft="6dp"
        android:inputType="numberDecimal"
        android:hint="Amount"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/pantryIngAmountTypeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="g"
        android:layout_gravity="center">

    </TextView>
    <ImageView
        android:id="@+id/increaseAmountIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circle"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:clickable="true"></ImageView>
</LinearLayout>


</androidx.cardview.widget.CardView>